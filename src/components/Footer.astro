  .logo-text {
    font-weight: var(--font-weight-regular);
    font-size: 14px;
    width: 270px;
    line-height: 24px;
  }

  .link-title {
    font-weight: var(--font-weight-medium);
    font-size: 20px;
  }

  .link-content {
    font-weight: var(--font-weight-regular);
    font-size: 14px;
    display: flex;
    align-items: center;
    gap: 5px;
  }

  .footer-links{
    font-weight: var(--font-weight-regular);
    font-size: 14px;
  }
  @media only screen and (max-width: 790px) {
    .links-container{
        padding-left: 3.8rem;
