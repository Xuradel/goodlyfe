---
const {flip, image1, image2, body, head, button} = Astro.props;
import OutlineButton from './OutlineButton.astro';
---
<section class={`flex ${flip ? 'flex-row-reverse' : ''} items-center justify-center gap-40 relative mt-40`}>
  <div class="relative">
    <img src={image1} alt="man lifting weights" />
    <img src={image2} alt="woman doing situps" class="absolute top-40 left-44" />
  </div>
  <div class={`feature-text flex flex-col gap-y-4 `}>
    <h4>{head}</h4>
    <p class="body">{body}</p>
    <OutlineButton text={button}/>
  </div>
</section>

<style>
  h4 {
    color: var(--pink);
  }

  p {
    color: var(--greyOne);
    width: 540px;
    line-height: 37px;
  }

  @media (max-width: 1024px) {
    /* Styles for tablets and smaller screens */
    section {
      flex-direction: column;
      align-items: center;
    }

    div.relative {
      order: ${flip ? '2' : '1'};
    }

    img {
        padding-right: 10rem;
    }

    p {
      width: auto; /* Adjust width as needed for smaller screens */
    }

    .feature-text {
        padding: 0 2rem 0 2rem;
    }
  }
</style>

