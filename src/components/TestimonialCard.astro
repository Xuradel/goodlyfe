---
const { title, body, picture, name, profesion, size } = Astro.props;

const getWidth = () => {
  // Check if the screen width is below 640 pixels (commonly considered mobile width)
  const isMobile = typeof window !== 'undefined' && window.innerWidth < 640;

  switch (size) {
    case "large":
      return isMobile ? "349px" : "449px";
    case "medium":
      return isMobile ? "249px" : "349px";
    case "small":
      return isMobile ? "251px" : "351px";
    default:
      return isMobile ? "249px" : "349px"; // default to medium if size is not provided or invalid
  }
};

//add responsiveness to the card width
---

<article class="flex flex-col gap-y-4" style={{ width: getWidth() }}>
  <h4>{title}</h4>
  <p>
    <span>â€œ</span>
    {body}
  </p>
  <div class="flex items-center gap-x-4">
    <img src={picture} />
    <div>
      <p class="hyperlink">{name}</p>
      <p class="subtitle profesion">{profesion}</p>
    </div>
  </div>
</article>

