---
import WhiteButton from "./WhiteButton.astro";
---

<nav class="h-24 w-full">
  <h5 class="text-white font-extrabold">
    Good<span class="text-white/60">lyfe</span>
  </h5>
  <div class="flex gap-x-12">
    <a class="body link" href="/classes">Classes</a>
    <a class="body link" href="/timetable">Timetable</a>
    <a class="body link" href="/clubs">Clubs</a>
    <a class="body link" href="/nutrition">Nutrition</a>
    <a class="body link" href="/trial">Free Trial</a>
    <a class="body link flex items-center gap-x-1" href="/search"
      >Search <span
